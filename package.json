{
  "name": "meeting-assistant",
  "version": "1.0.0",
  "description": "Real-time meeting assistance with speech-to-text and AI insights",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "meeting",
    "assistant",
    "speech-to-text",
    "ai",
    "overlay"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "openai": "^4.20.1",
    "ws": "^8.14.2",
    "node-record-lpcm16": "^1.0.1",
    "speech-to-text-wav": "^0.1.3",
    "@google-cloud/speech": "^6.0.1",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.meetingassistant.app",
    "productName": "Meeting Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}